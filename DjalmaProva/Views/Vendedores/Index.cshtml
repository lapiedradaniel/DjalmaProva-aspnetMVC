@model List<Vendedor>

@{
    ViewData["Title"] = "Lista de Vendedores";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start" >
        <a role="button" class="btn btn-primary" asp-controller="Vendedores" asp-action="Criar">Adicionar Vendedor</a>
    </div>
    <br />

    <h1 > Lista de Vendedores</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nome</th>
      <th scope="col">Telefone</th>
      <th scope="col">Email</th>
      <th scope="col"> </th>
    </tr>
  </thead>
  <tbody>

            @if(Model != null && Model.Any())
            {
                foreach(Vendedor vendedor in Model )
                {
                  <tr>
                      <th scope="row">@vendedor.VendedorId</th>
                    <td>@vendedor.NomeCompleto</td>
                    <td>@vendedor.Telefone</td>
                    <td>@vendedor.Email</td>
                       

                     <td>
                        <div class="btn-group" role="group" >
                             <a role="button" class="btn btn-primary" asp-route-id="@vendedor.VendedorId" asp-controller="Vendedores" asp-action="Editar">Editar</a>
                             <a role="button" class="btn btn-danger" asp-route-id="@vendedor.VendedorId" asp-controller="Vendedores" asp-action="ApagarConfirmacao">Apagar</a>
                    
                        </div>
                     </td>

                  </tr>

                }
            }

  </tbody>
</table>

</div>
