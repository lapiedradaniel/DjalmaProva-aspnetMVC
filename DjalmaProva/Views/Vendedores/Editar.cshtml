@model Vendedor
<div class="text-center">

    <h1>Editar Vendedores</h1>
</div>

<form asp-controller="Vendedores" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="VendedorId" />

  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="NomeCompleto" class="form-control"  placeholder="Digite o Nome">

  </div>
    <div class="form-group">
        <label for="Telefone">Telefone</label>
        <input type="text" asp-for="Telefone" class="form-control" placeholder="Digite o E-mail">

    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o Telefone">

    </div>
   
    <br />

  <button type="submit" class="btn btn-primary" >Alterar</button>

  <a class="btn btn-secondary" asp-controller="Vendedores" asp-action="Index">Voltar</a>
</form>
