@model List<Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Produtos" asp-action="Criar">Adicionar Produtos</a>
    </div>
    <br />

    <h1> Lista de Produtos</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Descrição</th>
                <th scope="col">Nome</th>
                <th scope="col">Preço</th>
                <th scope="col">Estoque </th>
                <th scope="col">Marca </th>
                <th scope="col">Vendedor </th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ProdutoId</th>
                        <td>@item.ProdutoDescricao</td>
                        <td>@item.ProdutoNome</td>
                        <td>@item.ProdutoPreco</td>
                        <td>@item.QtdeEmEstoque</td>
                        <td>@item.MarcadoProduto</td>
                        <td>@item.Vendedor.VendedorId</td>


                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@item.ProdutoId" asp-controller="Produtos" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.ProdutoId" asp-controller="Produtos" asp-action="ApagarConfirmacao">Apagar</a>

                            </div>
                        </td>

                    </tr>

                }
            }

        </tbody>
    </table>

</div>

