@model Produto
<div class="text-center">

    <h1>Cadastro de Produtos</h1>
</div>

<form asp-controller="Produtos" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="ProdutoDescrição">Descrição</label>
        <input type="text" asp-for="ProdutoDescricao" class="form-control" placeholder="Digite a Descrição">

    </div>
    <div class="form-group">
        <label for="ProdutoNome">Nome</label>
        <input type="text" asp-for="ProdutoNome" class="form-control" placeholder="Digite o Nome do Produto">

    </div>
    <div class="form-group">
        <label for="ProdutoPreco">Preço</label>
        <input type="text" asp-for="ProdutoPreco" class="form-control" placeholder="Digite o Preço">

    </div>
    <div class="form-group">
        <label for="QtdeemEstoque">Estoque</label>
        <input type="text" asp-for="QtdeEmEstoque" class="form-control" placeholder="Quantidade no Estoque">

    </div>
    <div class="form-group">
        <label for="MarcadoProduto">Marca</label>
        <input type="text" asp-for="MarcadoProduto" class="form-control" placeholder="Digite a Marca">

    </div>
    <div class="form-group">
        <label asp-for="VendedorId" class="control-label"></label>
        <select asp-for="VendedorId" class="form-control" asp-items="ViewBag.VendedorId"></select>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button>

    <a class="btn btn-secondary" asp-controller="Produtos" asp-action="Index">Voltar</a>
</form>
