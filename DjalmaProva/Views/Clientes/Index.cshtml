@model List<Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="text-center">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-primary" asp-controller="Clientes" asp-action="Criar">Adicionar Clientes</a>
    </div>
    <br />

    <h1> Lista de Clientes</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Telefone</th>
                <th scope="col">Email</th>
                <th scope="col">Cpf </th>
                <th scope="col">Cnpj </th>
                <th scope="col">Vendedor </th>
            </tr>
        </thead>
        <tbody>

            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.ClienteId</th>
                        <td>@item.NomeCompleto</td>
                        <td>@item.Telefone</td>
                        <td>@item.Email</td>
                        <td>@item.CPF</td>
                        <td>@item.CNPJ</td>
                        <td>@item.Vendedor.VendedorId</td>


                        <td>
                            <div class="btn-group" role="group">
                                <a role="button" class="btn btn-primary" asp-route-id="@item.ClienteId" asp-controller="Clientes" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@item.ClienteId" asp-controller="Clientes" asp-action="ApagarConfirmacao">Apagar</a>

                            </div>
                        </td>

                    </tr>

                }
            }

        </tbody>
    </table>

</div>

